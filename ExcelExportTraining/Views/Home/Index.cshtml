@model IEnumerable<ExcelExportTraining.Models.Customer>

@{
    ViewBag.Title = "Müşteri Listesi";
}

<h2>Müşteri Listesi</h2>
<br />
<a href="@Url.Action("ExportToExcel", "Home")" id="export" class="btn btn-default"><span class="glyphicon glyphicon-save-file" style="color:#262222"></span> Excel'e Yaz </a>
<br />
<hr />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        </tr>
    }

</table>
